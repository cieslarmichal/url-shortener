{
  "name": "@url-shortener/backend",
  "private": true,
  "type": "module",
  "scripts": {
    "start:dev": "dotenv -e .env -- node --inspect --no-warnings=ExperimentalWarning --experimental-specifier-resolution=node --loader ts-node/esm/transpile-only src/index.ts",
    "build:clean": "rimraf dist",
    "build": "tsc --build tsconfig.build.json",
    "build:dev": "tsc --build tsconfig.json",
    "test:unit": "dotenv -e .env.test -- vitest .unit.test.ts --threads false",
    "test:integration": "dotenv -e .env.test -- vitest .integration.test.ts --threads false",
    "test:migrations:run": "dotenv -e .env.test -- node --no-warnings=ExperimentalWarning --experimental-specifier-resolution=node --loader ts-node/esm/transpile-only src/core/database/migrations/runDatabasesMigrations.ts",
    "test:migrations:rollback": "dotenv -e .env.test -- node --no-warnings=ExperimentalWarning --experimental-specifier-resolution=node --loader ts-node/esm/transpile-only src/core/database/migrations/rollbackDatabasesMigrations.ts",
    "lint": "eslint . --ext .ts --cache --max-warnings 0",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@fastify/type-provider-typebox": "^3.5.0",
    "@sinclair/typebox": "^0.31.17",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.23.2",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.1",
    "knex": "^2.5.1",
    "pg": "^8.11.3",
    "pino": "^8.15.1",
    "pino-pretty": "^10.2.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/node": "^20.8.0",
    "@types/validator": "^13.11.2"
  }
}
